{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Atlas Financial CFO",
  "version": "0.1.0",
  "identifier": "com.atlas-financial.cfo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Atlas Financial CFO",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "keyring": {
      "desktop": true
    },
    "sql": {
      "preload": ["sqlite:atlas_financial.db?mode=rwc"]
    }
  }
}

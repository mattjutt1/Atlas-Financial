# Atlas Financial v1.1 Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
KEYCLOAK_ADMIN_PASSWORD=your-keycloak-admin-password-here
KEYCLOAK_REALM=atlas
KEYCLOAK_CLIENT_ID=atlas-web
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret-here

# =============================================================================
# FIREFLY III CONFIGURATION
# =============================================================================
# Generate with: head -c 32 /dev/urandom | base64
FIREFLY_APP_KEY=base64:your-32-character-app-key-here-change-this

# =============================================================================
# HASURA CONFIGURATION
# =============================================================================
HASURA_ADMIN_SECRET=your-hasura-admin-secret-here
HASURA_JWT_SECRET_KEY=your-jwt-secret-key-here

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-here
GRAFANA_OAUTH_SECRET=your-grafana-oauth-secret-here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# AI ENGINE CONFIGURATION
# =============================================================================
AI_MODEL_NAME=llama-2-7b-chat-finance
OPENAI_API_KEY=your-openai-api-key-for-fallback-optional

# =============================================================================
# BANK API CONFIGURATION (Set these when ready to connect real accounts)
# =============================================================================
# Nordigen/GoCardless Bank Data API
NORDIGEN_SECRET_ID=your-nordigen-secret-id
NORDIGEN_SECRET_KEY=your-nordigen-secret-key

# AqBanking OFX Configuration
AQBANKING_DATA_DIR=/app/data/aqbanking

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
DEBUG=atlas:*

# =============================================================================
# PRODUCTION CONFIGURATION (for future deployment)
# =============================================================================
# DOMAIN=your-domain.com
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# LETSENCRYPT_EMAIL=your-email@domain.com

# Atlas Financial - Production Environment Configuration
# SuperTokens Authentication Configuration

# SuperTokens Core Service (Production)
SUPERTOKENS_CONNECTION_URI=https://supertokens.your-domain.com
SUPERTOKENS_API_KEY=your_production_supertokens_api_key

# Application URLs (Production)
NEXT_PUBLIC_API_DOMAIN=https://your-domain.com
NEXT_PUBLIC_WEBSITE_DOMAIN=https://your-domain.com

# Hasura GraphQL Configuration (Production)
HASURA_GRAPHQL_ENDPOINT=https://hasura.your-domain.com/v1/graphql
HASURA_ADMIN_SECRET=your_production_hasura_admin_secret

# Database Configuration (Production)
POSTGRES_PASSWORD=your_production_postgres_password

# Redis Configuration (Production)
REDIS_PASSWORD=your_production_redis_password

# Production Configuration
NODE_ENV=production
NEXT_PUBLIC_AUTH_PROVIDER=supertokens

# Grafana Configuration (Production)
GRAFANA_ADMIN_PASSWORD=your_production_grafana_password

# Firefly III Configuration (Production)
FIREFLY_APP_KEY=your_production_firefly_app_key

# SSL/Security Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true

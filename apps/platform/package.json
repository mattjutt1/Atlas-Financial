{
  "name": "@atlas-financial/core-platform",
  "version": "2.0.0",
  "description": "Atlas Financial Core Platform - Modular Monolith (Next.js + Rust + AI + SuperTokens)",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:rust && npm run build:ai && next build",
    "build:rust": "cd rust-engine && cargo build --release",
    "build:ai": "cd ai-engine && python -m build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist target __pycache__",
    "postinstall": "npm run setup:rust && npm run setup:ai",
    "setup:rust": "cd rust-engine && cargo fetch",
    "setup:ai": "cd ai-engine && pip install -r requirements.txt"
  },
  "dependencies": {
    "next": "14.2.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@apollo/client": "^3.11.8",
    "graphql": "^16.9.0",
    "supertokens-auth-react": "^0.47.1",
    "supertokens-node": "^20.1.5",
    "@supertokens-auth/react": "^0.47.1",
    "@types/node": "22.7.4",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "typescript": "5.6.2",
    "tailwindcss": "3.4.13",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.47",
    "redis": "^4.7.0",
    "pg": "^8.13.0",
    "@types/pg": "^8.11.10",
    "jose": "^5.9.3",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "zod": "^3.23.8",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "@nestjs/common": "^10.4.4",
    "@nestjs/core": "^10.4.4",
    "@nestjs/platform-express": "^10.4.4",
    "express": "^4.21.0",
    "@types/express": "^4.17.21",
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.17",
    "compression": "^1.7.4",
    "@types/compression": "^1.7.5",
    "winston": "^3.15.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "@prometheus-io/client": "^1.1.0",
    "node-cron": "^3.0.3",
    "@types/node-cron": "^3.0.11"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.13",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.2.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "prettier": "^3.3.3",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.0.0",
    "nodemon": "^3.1.7",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "keywords": [
    "atlas-financial",
    "fintech",
    "modular-monolith",
    "nextjs",
    "rust",
    "ai",
    "supertokens",
    "graphql",
    "financial-engine"
  ],
  "author": "Atlas Financial Development Team",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlas-financial/core-platform.git"
  },
  "workspaces": [
    "rust-engine",
    "ai-engine"
  ],
  "rust": {
    "engine": {
      "path": "./rust-engine",
      "build": "cargo build --release",
      "target": "target/release"
    }
  },
  "python": {
    "ai-engine": {
      "path": "./ai-engine",
      "build": "python -m build",
      "requirements": "requirements.txt"
    }
  }
}

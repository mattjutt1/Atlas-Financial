# Atlas Financial - Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_PASSWORD=atlas_dev_password
REDIS_PASSWORD=atlas_redis_password

# Hasura Configuration
HASURA_ADMIN_SECRET=atlas_hasura_admin_secret

# SuperTokens Configuration
SUPERTOKENS_API_KEY=atlas_supertokens_api_key

# Firefly III Configuration
FIREFLY_APP_KEY=base64:your-32-character-app-key-here-change-this

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin_dev_password

# Next.js Configuration
NEXTAUTH_SECRET=atlas_nextauth_secret

# Rust Financial Engine Configuration
RUST_ENGINE_LOG_LEVEL=info
RUST_ENGINE_MAX_CONCURRENT_REQUESTS=1000
RUST_ENGINE_RATE_LIMIT_PER_MINUTE=1000

# Integration Configuration
ENABLE_REMOTE_SCHEMA_INTROSPECTION=true
REMOTE_SCHEMA_TIMEOUT_SECONDS=30
ENABLE_JWT_PASSTHROUGH=true

# Development Configuration
DEV_MODE=true
ENABLE_CORS=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security Configuration (Production)
# JWT_SECRET_KEY=your-production-jwt-secret
# APP_ENCRYPTION_KEY=your-production-encryption-key
# DATABASE_SSL_MODE=require
